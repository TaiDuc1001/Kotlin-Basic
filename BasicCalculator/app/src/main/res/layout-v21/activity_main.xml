            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/button19"
            style="@style/Widget.BasicCalculator.Button"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/button20"
            style="@style/Widget.BasicCalculator.Button"
